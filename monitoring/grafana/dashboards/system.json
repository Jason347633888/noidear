{
  "dashboard": {
    "id": null,
    "uid": "noidear-system-metrics",
    "title": "Noidear System Metrics",
    "tags": ["noidear", "system"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Document Uploads (Rate)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(doc_system_document_uploads_total[5m])",
            "legendFormat": "{{department}} - {{user}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Uploads/sec" },
          { "format": "short", "show": false }
        ]
      },
      {
        "id": 2,
        "title": "Approval Duration (P95)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(doc_system_approval_duration_seconds_bucket[5m]))",
            "legendFormat": "{{approval_type}} (P95)",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short", "show": false }
        ]
      },
      {
        "id": 3,
        "title": "Active Users",
        "type": "stat",
        "gridPos": { "x": 0, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "doc_system_active_users",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 4,
        "title": "Login Failures (Rate)",
        "type": "stat",
        "gridPos": { "x": 6, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(doc_system_login_failures_total[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.1, "color": "yellow" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "API Request Duration (P95)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(doc_system_api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{route}} (P95)",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short", "show": false }
        ]
      },
      {
        "id": 6,
        "title": "Database Query Duration (P95)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(doc_system_database_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} (P95)",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short", "show": false }
        ]
      }
    ]
  }
}
